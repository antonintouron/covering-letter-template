{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}
<section class="card">
    <div class="text-center">
        <h1 class="mt-3">Cover-letter-template v1.0</h1>
        {% for label, messages in app.flashes %}
            <div class="content">
                <div class="container">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-9 text-center">
                        <div class="alert alert-{{ label }}">
                            {% for message in messages %}
                                <p>{{ message | raw}}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <p class="lead">Générez votre lettre de motivation en remplissant simplement le formulaire ci-dessous.</p>
    </div>

    <div class="container">
        {{ form_start(form) }}
            <div class="row justify-content-center">

            <div class="col-sm-6">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.lastName) }}
            </div>

            <div class="col-sm-4">
                {{ form_row(form.address) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.postalCode) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.city) }}
            </div>

            <div class="col-sm-6">
                {{ form_row(form.mobilePhone) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.email) }}
            </div>

            <div class="col-sm-12">
                {{ form_row(form.recipientName) }}
            </div>

            <div class="col-sm-4">
                {{ form_row(form.recipientAddress) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.recipientPostalCode) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.recipientCity) }}
            </div>

            <div class="col-sm-12">
                {{ form_row(form.object) }}
            </div>

            <div class="col-sm-12">
                {{ form_row(form.message) }}
            </div>

            <div class="col-sm-12">
                {{ form_row(form.checkValid) }}
            </div>

            <button type="submit" class="btn btn-success">Créer ma lettre de motivation</button>

            </div>
        {{ form_end(form) }}
    </div>
    <br>
    <div class="text-center">
        <a href="#">Conditions générales d'utilisations</a>
    </div>
</section>
{% endblock %}
